    <!-- 点击编辑按钮 -->
    <select id="get" resultMap="mmComplainMap" >
        select
            id,
            title,
            description,
            type,
            contact,
            phone,
            contact_user,
            DATE_FORMAT(complain_date, '%Y-%c-%d %H:%i:%S') complain_date,
            reply_status,
            reply_content,
            DATE_FORMAT(reply_date, '%Y-%c-%d %H:%i:%S') reply_date,
            reply_user,
            longitude,
            latitude,
            address,
            create_user,
            DATE_FORMAT(create_date, '%Y-%c-%d %H:%i:%S') create_date,
            update_user,
            DATE_FORMAT(update_date, '%Y-%c-%d %H:%i:%S') update_date,
            del
        FROM
            zzb_complain
        WHERE
            del != 1
        and
            id = #{id}
