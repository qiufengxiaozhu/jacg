    <select id="getAllByContactUser" resultMap="mmComplainMap" >
        select
            id,
            title,
            description,
            type,
            contact,
            phone,
            contact_user,
            complain_date,
            reply_status,
            reply_content,
            reply_date,
            reply_user,
            longitude,
            latitude,
            address,
            create_user,
            create_date,
            update_user,
            update_date,
            del,


            DATE_FORMAT(complain_date, '%Y-%m') as year_and_month,
            DATE_FORMAT(complain_date,'%d') as day_str

        FROM
            zzb_complain
        WHERE
            del != 1
        AND
            contact_user=#{contactUser}
    </select>

    <!-- 点击编辑按钮 -->
    <select id="getOneById" resultMap="mmComplainMap" >
        select
            id,
            title,
            description,
            type,
            contact,
            phone,
            contact_user,
            complain_date,
            reply_status,
            reply_content,
            reply_date,
            reply_user,
            longitude,
            latitude,
            address,
            create_user,
            create_date,
            update_user,
            update_date,
            del
        FROM
            zzb_complain
        WHERE
            del != 1
        AND
            id=#{id}
    </select>
