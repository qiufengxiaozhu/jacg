    <!--查询三条-->
    <select id="find_threeNews" resultMap="mmnewsMap" >
        SELECT
            n.id,
            n.title,
            n.content,
            n.contentnohtml,
            n.STATUS,
            t2.category category,
            n.time_zone,
            DATE_FORMAT( n.news_date, "%Y-%m-%d %T" ) news_date,
            n.clicks,
            n.create_date ,
            t3.path path
        FROM
          qgq_news n
        left join   qgq_category t2 ON n.fk_categoryid = t2.id
        left join sys_attachments t3  on  t3.billid  =  n.id

        WHERE
          n.del != 1
        AND n.STATUS = "已发布状态"
        ORDER BY
          n.news_date DESC
        LIMIT 3
    </select>

    <!--根据id查询指定新闻-->
    <select id="find_news" resultMap="mmnewsMap" >
        SELECT
        id,
        title,
        content,
        clicks,
        DATE_FORMAT(news_date,"%Y-%m-%d %T") news_date
        from qgq_news
        where del!=1 and id = #{id} and status="已发布状态"
    </select>

    <!--将该新闻的点击量+1-->
    <update id="add_newsClicks" >
        UPDATE qgq_news  SET
        clicks = clicks + 1
        WHERE id = #{id}
    </update>

    <!--查询所有新闻-->
    <select id="find_allNews" resultMap="mmnewsMap" >
        SELECT
        n.id,
        n.title,
        n.content,
        n.contentnohtml,
        n.status,
        qgq_category.category category,
        n.time_zone,
        DATE_FORMAT(n.news_date,"%Y-%m-%d %T") news_date,
        n.clicks,
        n.create_date,
        t3.path path
        from qgq_news n
        left join qgq_category on n.fk_categoryid = qgq_category.id
        left join sys_attachments t3  on  t3.billid  =  n.id
        where n.del!=1 and n.status="已发布状态"
        ORDER BY n.news_date desc
    </select>

    <!--根据发布时间查询新闻-->
    <select id="find_newsTime" resultMap="mmnewsMap" >
        select
            n.id,
            n.title,
            n.content,
            n.contentnohtml,
            n.status,
            qgq_category.category category,
            n.time_zone,
            DATE_FORMAT(n.news_date,"%Y-%m-%d %T") news_date,
            n.clicks,
            n.create_date
        from qgq_news n
        left join qgq_category
        on n.fk_categoryid = qgq_category.id
        where n.del!=1 and n.status="已发布状态" and news_date like concat('%', #{newsDate}, '%')
        ORDER BY n.news_date desc
    </select>

